# Backend Environment Variables

PORT=3000
NODE_ENV=development

# Database (PostgreSQL for production, SQLite for development)
# For Render: Set this in Render dashboard
DATABASE_URL=

# JWT Secret (use a strong random string)
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production

# Cloudinary Configuration
# Sign up at https://cloudinary.com and get these from your dashboard
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# Twilio SMS (Optional - for real OTP)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# Encryption
ENCRYPTION_KEY=0123456789abcdef0123456789abcdef0123456789abcdef0123456789abcdef

# Hospital Location (for geo-fencing simulation)
HOSPITAL_LAT=12.9716
HOSPITAL_LNG=77.5946
